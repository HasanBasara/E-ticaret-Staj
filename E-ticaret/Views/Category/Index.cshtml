
@{
    ViewBag.Title = "Index";
    var category = (E_ticaret.Core.Model.Entity.Category)ViewBag.category;
}


<h3>@category.Name Kategorisindeki Ürünler</h3>
@{
    foreach (var item in Model)
    {
        <div class="productBox">
            <p class="title">@item.Name </p>
            <img src="@item.Image" />
            <p>
                @item.Brand
            </p>
            <p>
                @item.Model
            </p>
            <p>
                @item.Price.ToString("##,## ₺")
            </p>
            <p>
                @item.Description
            </p>
            <a href="/urun/@item.Name.Replace(" ","-")/@item.ID" class=" btn btn-success">İncele</a>
            <a href="#" class=" btn btn-default"><i class="fas fa-shopping-cart"></i>Sepete Ekle</a>
        </div>
    }
}
<div class="row"></div>
<style>
    .productBox {
        width: 220px;
        float: left;
        margin: 15px;
        border: 2px solid #808080;
        padding: 15px;
    }

        .productBox img {
            width: 100%;
        }

        .productBox .title {
            font-weight: bold;
            text-align: center;
        }

        .productBox p {
            text-align: center;
        }
</style>

