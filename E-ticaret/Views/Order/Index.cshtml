@model IEnumerable<E_ticaret.Core.Model.Entity.Order>

@{
    ViewBag.Title = "Siparislerim";
}

<h2>Siparislerim</h2>


<table class="table table-bordered">
    <tr>
        <th>
            Sipariş No
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.Name)
        </th>   
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            Siparişleri İncele
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.ActionLink("Siparişleri İncele", "Detail", new { id=item.ID }, new {@class="btn btn-success" })
        </td>
    </tr>
}

</table>
