@model E_ticaret.Core.Model.Entity.Product
@{
    ViewBag.Title = "Ürün Detayı";
}

<h2>Ürün Detayı</h2>
<div class="productBox">
    <p class="title">@Model.Name </p>
    <img src="@Model.Image" />
    <p>
        @Model.Brand
    </p>
    <p>
        @Model.Model
    </p>
    <p>
        @Model.Price.ToString("##,## ₺")
    </p>
    <p>
        @Model.Description
    </p>
    <a href="#" class=" btn btn-success">İncele</a>
    <a href="#" class=" btn btn-default"><i class="fas fa-shopping-cart"></i>Sepete Ekle</a>
</div>

